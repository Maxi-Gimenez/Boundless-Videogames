<header class="header">
    <nav class="nav">
        <a href="#home">Home</a>
        <a href="#games">Games</a>
        <div class="img-header">
            <img src="../../public/SVGsinfondo.svg" alt="">
        </div>
        <a href="#about">About</a>
        <a href="#">Social</a>
    </nav>
</header>

<style>
    .header{
        display: flex;
        justify-content: center;
        align-items: center;
        position: fixed;
        width: 100%;
        height: 60px;
        z-index: 120;

        transition: background .3s linear; 
    }
    .header.scrolled{
        background-color: #aaa1;
        backdrop-filter: blur(30px);
    }
    .nav{
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }
    .nav > *{
        padding: 10px 5px;
        color: #757575;
        text-decoration: none;
        font-size: 17px;
        font-weight: 600;
        transition: color .3s linear;
        &:hover{
            color: #4d7234;
        }
    }
    .img-header img{
        width: 43px;
    }
</style>
<script>
    window.addEventListener('scroll', function() {
    const header = document.querySelector('.header');
    if (window.scrollY > 50) { // Cambia este valor según cuándo quieres que cambie el color
        header.classList.add('scrolled');
    } else {
        header.classList.remove('scrolled');
    }
    });
</script>